<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorBackground">

    <TextView
            android:text="@string/your_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_score_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_left_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/black"/>
    <Button
            android:text="@string/tap_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tap_me_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="341dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="342dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"
            android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/buttonBackground"/>

</android.support.constraint.ConstraintLayout>